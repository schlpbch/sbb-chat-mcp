# App Configuration
# Base URL for the application (used for metadata and social sharing)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# MCP Server URLs
# Development server (local)
NEXT_PUBLIC_MCP_SERVER_URL_DEV=http://localhost:8080

# Staging server (Google Cloud Run)
NEXT_PUBLIC_MCP_SERVER_URL_STAGING=https://journey-service-mcp-staging-jf43t3fcba-oa.a.run.app

# Default environment (dev or staging)
NEXT_PUBLIC_MCP_ENV=staging

# GCP Project ID
GCP_PROJECT_ID=sbb-chat-mcp

# Gemini API Configuration (for LLM chat feature)
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_CLOUD_KEY=your_google_cloud_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# Resend Email Configuration (for feedback feature)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=feedback@yourdomain.com
FEEDBACK_EMAIL=your-email@example.com
